<%- include('../partials/header') %>
<div class="col-md-6 mx-auto">
    <div class="card">
        <h5 class="card-header">New Comment</h5>
        <div class="card-body">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <!-- <label for="comment">comment</label> -->
                    <textarea class="form-control" type="text" name="comment[text]" rows="3" autofocus></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-secondary btn-block">Submit!</button>
                </div>
            </form>
            <a class="text-secondary" href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>