<%- include('../partials/header') %>
<div class="col-md-6 mx-auto">
    <div class="card">
        <h5 class="card-header">New Comment</h5>
        <div class="card-body">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <label for="rating">Rating</label>
                    <select class="form-control" id="rating" name="rating[rating]">
                      <option>1</option>
                      <option>2</option>
                      <option>3</option>
                      <option>4</option>
                      <option>5</option>
                    </select>
                  </div>
                <div class="form-group">
                    <label for="comment">Comment</label>
                    <textarea id="comment" class="form-control" type="text" name="comment[text]" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a class="text-primary" href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>