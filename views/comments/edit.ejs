<%- include('../partials/header') %>
<div class="col-md-6 mx-auto">
    <div class="card">
        <h5 class="card-header">Edit Comment</h5>
        <div class="card-body">
            <form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <!-- <label for="comment">comment</label> -->
                    <textarea class="form-control" type="text" name="comment[text]"
                        rows="3"><%=comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-secondary btn-block">Submit!</button>
                </div>
            </form>
            <a class="text-secondary" href="/campgrounds/<%= campground_id %>">Go Back</a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>