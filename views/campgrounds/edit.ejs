<%- include('../partials/header') %>

<div class="col-md-6 mx-auto">
    <div class="card">
        <h5 class="card-header">Edit Campground</h5>
        <div class="card-body">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" id="name" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="image" id="image"
                        title="Only images from images.unsplash.com allowed. See link below for instructions."
                        placeholder="https://images.unsplash.com/..." value="<%= campground.image %>" required>
                    <small>Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on how to copy unsplash
                        urls.</small>
                </div>
                <div class="form-group">
                    <label for="cost">Cost</label>
                    <input class="form-control" type="number" name="cost" id="cost" value="<%= campground.cost %>"
                        step="0.01" min="0" required>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location"
                        value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" type="text" name="description"
                        rows="3"><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
            </form>
            <a class="text-primary" href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>